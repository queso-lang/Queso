{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*", "src/compiler/runtime"]
}
